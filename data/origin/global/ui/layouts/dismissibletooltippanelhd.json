{
    "type": "DismissibleTooltipPanel",
    "name": "DismissibleTooltipPanel",
    "fields": {
        "drawTint": false,
        "screenEdgePadding": 50,
        "tooltipPadding": 50
    },
    "children": [
        {
            "type": "ClickCatcherWidget",
            "name": "ClickCatcher"
        },
        {
            "type": "NineTileImageWidget",
            "name": "TooltipBackground",
            "fields": {
                "filename": "PANEL\/TooltipBorder\/TooltipBorder",
                "backgroundColor": [
                    0,
                    0,
                    0,
                    0.8
                ],
                "tileScale": 1
            }
        },
        {
            "type": "TextBoxWidget",
            "name": "TooltipText",
            "fields": {
                "fitToText": true,
                "style": {
                    "fontColor": "$FontColorWhite",
                    "pointSize": "$TooltipFontSize",
                    "alignment": {
                        "h": "center",
                        "v": "center"
                    },
                    "options": {
                        "pipeCharacterBehavior": "handle",
                        "newlineHandling": "reversed"
                    }
                }
            }
        }
    ]
}